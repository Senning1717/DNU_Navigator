@model IEnumerable<DnuNavigator.Models.Subject>

@{
    ViewData["Title"] = "Dashboard sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary text-center">🎓 Dashboard sinh viên</h2>
    <p class="text-muted text-center">Dưới đây là các học phần bạn đã đăng ký</p>

    <div class="row g-4">
        @foreach (var subject in Model)
        {
            <div class="col-12">
                <div class="d-flex border rounded shadow-sm overflow-hidden">
                    <!-- Hình minh hoạ -->
                    <div class="flex-shrink-0">
                        <img src="https://source.unsplash.com/200x150/?education,@subject.SubjectName"
                             alt="@subject.SubjectName"
                             class="img-fluid"
                             style="object-fit: cover; width: 200px; height: 150px;">
                    </div>

                    <!-- Thông tin học phần -->
                    <div class="p-3 flex-grow-1">
                        <h5 class="text-dark">
                            <a asp-controller="Subject" asp-action="Details" asp-route-id="@subject.Id"
                               class="text-decoration-none text-primary">
                                @subject.SubjectName (@subject.SubjectCode)
                            </a>
                        </h5>
                        <p class="mb-1"><strong>Tín chỉ:</strong> @subject.Credits</p>
                        <p class="mb-0">@subject.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>