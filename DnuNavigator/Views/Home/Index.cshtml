@{
    ViewData["Title"] = "Trang chủ";
}

<section class="hero bg-light py-5 text-center">
    <div class="container">
        <h1 class="display-5 fw-bold">DNU Navigator</h1>
        <p class="lead">Định hướng học tập thông minh cho sinh viên Đại Nam</p>
        <p class="text-muted">Khám phá lộ trình học tập cá nhân hóa, tài nguyên học liệu phù hợp và định hướng nghề nghiệp.</p>
        <a href="/Account/Login" class="btn btn-warning btn-lg mt-3">Bắt đầu hành trình của bạn</a>
    </div>
</section>

<section class="features container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📘 Gợi ý lộ trình học tập</h5>
                    <p class="card-text">Dựa trên môn đã học, mục tiêu nghề nghiệp và lĩnh vực quan tâm.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🔎 Khám phá tài nguyên học liệu</h5>
                    <p class="card-text">Sách, bài giảng, video, khóa học online theo từng môn học.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🎯 Cá nhân hóa toàn diện</h5>
                    <p class="card-text">Lộ trình học được tùy chỉnh cho từng sinh viên DNU.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta text-center py-5 bg-white">
    <h4 class="mb-4">Bạn đã sẵn sàng định hình tương lai học tập của mình chưa?</h4>
    <a href="/Account/Login" class="btn btn-primary btn-lg">Đăng nhập ngay</a>
</section>